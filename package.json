{
  "name": "@funboxteam/beatrix",
  "version": "1.1.0",
  "description": "A tool for converting and optimizing font files",
  "scripts": {
    "build": "node lib/index.js",
    "lint": "eslint -c .eslintrc.js lib",
    "demo": "sirv --host 0.0.0.0 dist/",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist/",
    "CHANGELOG.md",
    "README.md"
  ],
  "devDependencies": {
    "@funboxteam/eslint-config": "5.1.0",
    "eslint": "5.16.0",
    "husky": "3.0.7",
    "lint-staged": "9.4.0",
    "sirv-cli": "0.4.5"
  },
  "lint-staged": {
    "lib/**/*.{js}": [
      "eslint --fix --cache -c .eslintrc.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged -q"
    }
  }
}
